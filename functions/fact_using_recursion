#include <stdio.h>

int fact(int num)
{
    if(num == 0)
    {
        return 1;
    }
    return num * fact(num-1);
}

int main()
{
    int res = 0;
    int num =0;
    
    printf("Enter num\n");
    scanf("%d",&num);
    
    res = fact(num);
    
    printf("Factorial of %d is %d\n", num, res);

    return 0;
}
